{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "appId": "tour-of-villains-api",
            "appPort": 5111,
            "label": "dapr-debug",
            "type": "dapr",
            "dependsOn": "build",
            "httpPort": 3501,
            "grpcPort": 50001,
            "logLevel": "debug",
            // "config": "./config-dapr/jaeger-config.yaml"
            // "componentsPath": "./components"
        },
        {
            "appId": "tour-of-villains-api",
            "label": "daprd-down",
            "type": "daprd-down"
        }
    ]
}